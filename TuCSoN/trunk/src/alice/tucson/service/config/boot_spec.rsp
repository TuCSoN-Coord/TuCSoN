(
	in(rbac_installed(R)),
	out(rbac_installed(yes)),
	out(install_rbac)
)).

reaction(inp(disinstall_rbac),request,
(
	in(rbac_installed(R)),
	in_all(role(Name,Description,Level)),
	in_all(policy(Name,Permissions)),
	in_all(role_policy(NameRuolo,NamePolicy)),
	in_all(authorized_agent(NameAgent)),
	out(rbac_installed(no)),
	out(disinstall_rbac)
)).

