%
% Commands management
%
reaction(
    in(cmd(X)),
    completion,
    (
        out(cmd_pending(X))
    )
).

reaction(
    in(cmd_result(X, _)),
    invocation,
    (
        no(cmd_result(X, _)),
        no(cmd_pending(X)),
        out(cmd_result(X, unknown))
    )
).

reaction(
    in(cmd_result(X, R)),
    invocation,
    (
        rd(cmd_pending(X)),
        out(cmd_result(X, pending))
    )
).

reaction(
    out(cmd_result(X, R)),
    (
        no(cmd_pending(X)),
        in(cmd_result(X, R))
    )
).

reaction(
    out(cmd_result(X, R)),
    (
        in(cmd_pending(X))
    )
).

