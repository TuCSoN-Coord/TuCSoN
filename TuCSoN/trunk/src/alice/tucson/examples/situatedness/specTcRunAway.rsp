reaction( 
	in(can_suppress(Tci,Tcs,Time)), 
	(exo, response),
	( 
		in(input(Tci)), out(input(Tcs)),
		current_time(CurrentT), NewTime is CurrentT + Time,
		out_s( 
			time(NewTime), 
			endo,
			( 
				in(input(Tcs)), out(input(Tci)),
				out(can_suppress(Tci,Tcs,Time))
			)
		)
	)
).

reaction( 
